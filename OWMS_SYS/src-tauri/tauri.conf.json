{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "OWMS-SYS",
  "version": "0.1.0",
  "identifier": "com.jis.owms-sys",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OWMS System Tray",
        "width": 400,
        "height": 520,
        "minWidth": 360,
        "minHeight": 400,
        "maxWidth": 500,
        "maxHeight": 700,
        "resizable": true,
        "alwaysOnTop": true,
        "center": false,
        "visible": false,
        "decorations": false,
        "dragDropEnabled": false,
        "x": 1480,
        "y": 100
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "core:window:allow-hide",
            "core:window:allow-show",
            "core:window:allow-set-focus",
            "core:window:allow-start-dragging",
            "notification:default",
            "opener:default",
            {
              "identifier": "http:default",
              "allow": [
                "http://jis4f.iptime.org:2140/*",
                "http://localhost:4000/*",
                "http://**"
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}